<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".CompanyHome">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="#3FBDF1"
            android:paddingLeft="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/company_proflie_image_data"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/profile_vector" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/company_greedings_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Welcome Back"
                    android:textColor="#FFFFFF"
                    android:fontFamily="serif"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/company_name_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Nazakat Hussain"
                    android:textColor="#FFFFFF"
                    android:fontFamily="serif"
                    android:textSize="16sp"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="80dp"
                android:id="@+id/company_logout"
                android:layout_height="80dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/logut_img"
                android:backgroundTint="#3FBCF0"
                android:scaleType="fitXY"/>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp">
            <RelativeLayout
                android:id="@+id/rl_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ViewFlipper
                    android:id="@+id/company_flipper"
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <!-- First view -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/a11"
                        android:scaleType="fitXY"

                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/a22"
                        android:scaleType="fitXY"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/a33"
                        android:scaleType="fitXY"
                        />


                </ViewFlipper>





            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="Product Detail"
            android:textColor="#000000"
            android:fontFamily="serif"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/company_price_update"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:background="@drawable/watter_bottle"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/company_proflie_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/plus_icon" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/company_delivery_boy_detail"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_marginBottom="20dp"
                android:backgroundTintMode="src_in"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#3B009688"
                    android:backgroundTint="#3B009688"
                    android:src="@drawable/company_delievery_boy"/>


            </androidx.cardview.widget.CardView>

        </LinearLayout>




    </LinearLayout>



</LinearLayout>