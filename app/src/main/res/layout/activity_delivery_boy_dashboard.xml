<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".DeliveryBoyDashboard">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="#3FBDF1"
            android:paddingLeft="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/delivery_proflie_image_data"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/profile_vector" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/delivery_greedings_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Welcome Back"
                    android:textColor="#FFFFFF"
                    android:fontFamily="serif"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/delivery_name_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Nazakat Hussain"
                    android:textColor="#FFFFFF"
                    android:fontFamily="serif"
                    android:textSize="16sp"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="80dp"
                android:id="@+id/delivery_logout"
                android:layout_height="80dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/logut_img"
                android:backgroundTint="#3FBCF0"
                android:scaleType="fitXY"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp">
            <RelativeLayout
                android:id="@+id/delivery_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ViewFlipper
                    android:id="@+id/delivery_flipper"
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <!-- First view -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/a11"
                        android:scaleType="fitXY"

                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/a22"
                        android:scaleType="fitXY"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/a33"
                        android:scaleType="fitXY"
                        />


                </ViewFlipper>





            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="Product Detail"

            android:textColor="#000000"
            android:fontFamily="serif"
            android:textSize="18sp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/delivery_all_order"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:src="@drawable/delivery_boy__"/>
        </androidx.cardview.widget.CardView>




    </LinearLayout>



</LinearLayout>