<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".UserTrackOrder">

    <LinearLayout
        android:id="@+id/user_package_detail_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Track Order"
            android:textColor="#3FBDF1"
            android:fontFamily="serif"
            android:textSize="24sp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#00BCD4"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:text="Company Name"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/user_orederd_company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:text="8 Year"
                        android:textColor="@color/white"
                        android:textAlignment="viewEnd"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:text="Total Liters"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/user_orederd_company_total_liters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:text="5 Liters"
                        android:textColor="@color/white"
                        android:textAlignment="viewEnd"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:text="Total Bill"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/user_orederd_company_total_bill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:text="100 Rs"
                        android:textColor="@color/white"
                        android:textAlignment="viewEnd"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:text="Address"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/user_orederd_company_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:text="Address"
                        android:textColor="@color/white"
                        android:textAlignment="viewEnd"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/shooping_bag"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="OrderMade"
                    android:textColor="#3FBDF1"
                    android:fontFamily="serif"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your order has been confirmed"
                    android:textColor="#3FBDF1"
                    android:fontFamily="serif"
                    android:textSize="12sp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/package_icon"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_order_accepted_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Order Accepted"
                    android:textColor="#B9BABA"
                    android:fontFamily="serif"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/user_order_accepted_detail_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your order has been Accepted"
                    android:textColor="#B9BABA"
                    android:fontFamily="serif"
                    android:textSize="12sp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/delivery_vehical"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_ready_for_delivery_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Ready For Delivery"
                    android:textColor="#B9BABA"
                    android:fontFamily="serif"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/user_ready_for_delivery_detial_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your order is ready for Delivery"
                    android:textColor="#B9BABA"
                    android:fontFamily="serif"
                    android:textSize="12sp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/location"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_ready_my_location_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="My Location"
                    android:textColor="#B9BABA"
                    android:fontFamily="serif"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/user_ready_my_location_detail_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order has been Delivered"
                    android:textColor="#B9BABA"
                    android:fontFamily="serif"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/user_watter_quality_visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/watter_quality"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Water Quality"
                    android:textColor="#3FBDF1"
                    android:fontFamily="serif"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/user_watter_quality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order has been Delivered"
                    android:textColor="#3FBDF1"
                    android:fontFamily="serif"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:visibility="gone"
            android:id="@+id/user_order_compelted"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#5DCCFC"
            android:text="FeedBack"
            android:textColor="@color/white"/>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/user_package_detail_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/no_pacage_exsit"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="No Active Order"
            android:textColor="#3FBDF1"
            android:fontFamily="serif"
            android:textSize="24sp"/>
    </LinearLayout>




</LinearLayout>